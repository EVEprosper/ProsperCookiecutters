#!/usr/bin/make -f
%:
	dh $@ --with python-virtualenv

override_dh_virtualenv:
	dh_virtualenv --python /usr/bin/python3.5 --preinstall matplotlib --extra-index-url https://repo.fury.io/lockefox/ 

override_dh_strip:
	dh_strip --exclude=numpy --exclude=pandas --exclude=matplotlib

override_dh_shlibdeps:
	dh_shlibdeps --exclude=numpy --exclude=pandas --exclude=matplotlib
